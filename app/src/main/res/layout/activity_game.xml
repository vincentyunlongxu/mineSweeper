<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,2"
    android:background="@drawable/background1">
    <TableRow>
        <TextView
            android:layout_column="0"
            android:layout_height="30px"
            android:layout_span="3"
            android:padding="10dip" />
    </TableRow>
    <TableRow>
        <ImageView
            android:src="@drawable/smalltitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_gravity="center"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/Timer"
            android:layout_column="0"
            android:text="000"
            android:layout_gravity="center"
            android:textSize="30sp"/>
        <ImageButton android:id="@+id/Smiley"
            android:layout_column="1"
            android:background="@drawable/smiley_button_states"
            android:layout_height="150px"/>
        <TextView
            android:id="@+id/MineCount"
            android:layout_column="2"
            android:text="000"
            android:layout_gravity="center"
            android:textSize="30sp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="0"
            android:layout_height="80px"
            android:layout_span="3"
            android:padding="10dip" />
    </TableRow>
    <TableRow>
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/MineField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:stretchColumns="*"
            android:layout_span="3"
            android:padding="5dip">
        </TableLayout>
    </TableRow>
    <TableRow
        android:layout_gravity="bottom">
        <LinearLayout
            android:paddingTop="50px"
            android:orientation="horizontal"
            android:layout_span="3"
            android:layout_gravity="bottom">
            <ImageButton
                android:id="@+id/btn_restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/button_restart"
                android:layout_marginRight="5px"
                android:layout_weight="1"
                android:background="@null"/>
            <ImageButton
                android:id="@+id/btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/button_exit_small"
                android:layout_weight="1"
                android:layout_marginLeft="5px"
                android:background="@null"/>
        </LinearLayout>
    </TableRow>
</TableLayout>
